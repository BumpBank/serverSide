<h1 class="title">Sign Up </h1>

<form id='signup' action='/signup' method='post'>
  <input type="text" placeholder="username" name='username' class="username"/>
  <input type="password" placeholder="password" name='password' class="password"/>
  <input type="password" placeholder="pin" name='pin' class="pin"/>
  <input type="text" placeholder="account number" name='accountNumber' class="accountNumber"/>
  <input type="text" placeholder="balance" name='balance' class="balance"/>
  <input type="submit" value='Sign Up' class="loginBtn"/>
</form>
